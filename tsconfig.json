{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", ".eslintrc.js", "jest.config.js"]
}
